%1

% Search installed packages
pkgs = pkg("list");
pkginfo = pkgs(cellfun(@(x) ismember(x.name, {"wagenaarlab"}), pkgs));

if isempty(pkginfo)
  % The package is not installed yet
  % Where are we?
  here = fileparts(canonicalize_file_name(mfilename("fullpath")));
  pp = strsplit(dirname, filesep())
  [a, b] = pkg("prefix");
  pkgdir = [a filesep pp{end}];
  bindir = [b filesep pp{end}];
else
  pkgdir = pkginfo{1}.dir;
  bindir = pkginfo{1}.archprefix;
end

printf('Adding paths in %s and %s\n', pkgdir, bindir);

addpath(genpath(pkgdir));
addpath(genpath(bindir));
